{
    "python.analysis.extraPaths": ["scripts/nlp"],
    "python.analysis.typeCheckingMode": "standard",
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.autopep8",
    "python.testing.pytestArgs": [
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "scripts/nlp",
    "pylint.args": [
        "--disable=C0114", // File docstrings
        "--disable=C0115", // Class docstrings
        "--disable=C0116", // Function doctstrings
        "--disable=C0301", // Line length
        "--disable=R1735", // R1735:use-dict-literal
        "--disable=R0903", // R0903:too-few-public-methods
        "--disable=R0902", // R0902:too-many-instance-attributes
    ],
    "autopep8.args": [
        "--ignore=E501", // Line wrap
    ]
}